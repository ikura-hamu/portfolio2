---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import { Icon } from "astro-icon/components";
import ThemeToggle from "./ThemeToggle.astro";
---

<header>
  <nav>
    <h2><a href="/"><span>{SITE_TITLE}</span></a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
    <div class="social-links">
      <ThemeToggle />
      <div class="social-icons">
        <a
          href="https://twitter.com/ikura_hamu"
          target="_blank"
          title="X(Twitter)"
        >
          <span class="sr-only">X @ikura_hamu</span>
          <Icon name="ri:twitter-x-fill" width={32} height={32} />
        </a>
        <a href="https://github.com/ikura-hamu" target="_blank" title="GitHub">
          <span class="sr-only">GitHub @ikura-hamu</span>
          <Icon name="codicon:github-inverted" width={32} height={32} />
        </a>
      </div>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--header-bg);
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
    transition: background-color 0.3s ease;
  }
  h2 {
    margin: 0;
    font-size: 1em;
    border: none;
  }

  h2 a,
  h2 a.active {
    text-decoration: none;
    color: var(--text-color);
  }

  h2 a span {
    border-bottom: var(--accent) 2px dotted;
  }

  nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    gap: 1rem;
  }
  .internal-links {
    grid-column: 2;
    justify-self: center;
  }
  .social-links {
    justify-self: end;
  }

  nav a {
    padding: 1em 0.5em;
    color: var(--text-color);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--accent);
  }
  .social-links,
  .social-links a {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  .social-links a {
    color: var(--text-color);
  }
  .social-icons {
    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  @media (max-width: 720px) {
    nav {
      grid-template-columns: 1fr;
      gap: 0.5rem;
      text-align: center;
    }
    .internal-links {
      grid-column: 1;
      order: 2;
    }
    .social-links {
      justify-self: center;
      order: 3;
    }
    h2 {
      order: 1;
    }
    .social-icons {
      display: none;
    }
  }
</style>
